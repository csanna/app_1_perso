{% extends 'base.html.twig' %}

{% block title %}Personnages{% endblock %}

{% block monTitre %}{{ perso.nom }}{% endblock %}

{% block body %}
    <div class="row">
        <div class='col-2'>
            <img src="{{asset('images/personnages/' ~ perso.nom ~ '.png')}}">
        </div>

        <div class="col">
            <h2>{{ perso.nom }}</h2>
            <div>
                {% if perso.sexe %}
                        C'est un homme
                    {% else %}
                        C'est une femme
                    {% endif %}
            </div>

            <h3>Les caractéristiques</h3>

            <ul>
                <li>Force : {{perso.carac.force}}</li>
                <li>Agilité : {{perso.carac.agilité}}</li>
                <li>Intelligence : {{perso.carac.intelligence}}</li>
            </ul>
        </div>
    </div>
{% endblock %}
